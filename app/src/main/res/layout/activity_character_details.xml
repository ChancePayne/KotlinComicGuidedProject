<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".CharacterDetailsActivity">

    <EditText
            android:contentDescription="login page username input"
            android:hint="username input"
            android:id="@+id/text_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <ImageView android:id="@+id/text_publisher" android:layout_width="match_parent" android:layout_height="wrap_content"/>

</LinearLayout>